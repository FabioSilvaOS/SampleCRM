<views:BaseUserControl  
             x:Class="SampleCRM.MainPage"
             xmlns:views="clr-namespace:SampleCRM.Web.Views"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:login="clr-namespace:SampleCRM.LoginUI"
             xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=OpenSilver.Controls.Navigation"
             xmlns:uriMapper="clr-namespace:System.Windows.Navigation;assembly=OpenSilver.Controls.Navigation"
             mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <Grid x:Name="LayoutRoot" Style="{StaticResource LayoutRootGridStyle}">
        <Border x:Name="ContentBorder" Style="{StaticResource ContentBorderStyle}">
            <navigation:Frame x:Name="ContentFrame" Style="{StaticResource ContentFrameStyle}"
                              Source="/Home" Navigated="ContentFrame_Navigated" NavigationFailed="ContentFrame_NavigationFailed">
                <navigation:Frame.UriMapper>
                    <uriMapper:UriMapper>
                        <uriMapper:UriMapping Uri=" " MappedUri="/Views/Home.xaml" />
                        <uriMapper:UriMapping Uri="/{pageName}" MappedUri="/Views/{pageName}.xaml" />
                    </uriMapper:UriMapper>
                </navigation:Frame.UriMapper>
            </navigation:Frame>
        </Border>
        <Grid x:Name="NavigationGrid" Style="{StaticResource NavigationGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" x:Name="BrandingBorder" Style="{StaticResource BrandingBorderStyle}">
                <StackPanel x:Name="BrandingStackPanel" Style="{StaticResource BrandingStackPanelStyle}">

                    <ContentControl Style="{StaticResource LogoIcon}" />
                    <TextBlock x:Name="ApplicationNameTextBlock" Style="{StaticResource ApplicationNameStyle}"
                               Text="Sample CRM" />
                </StackPanel>
            </Border>
            <Border Grid.Column="1" x:Name="LinksBorder" Style="{StaticResource LinksBorderStyle}">
                <StackPanel x:Name="LinksStackPanel" Style="{StaticResource LinksStackPanelStyle}">
                    <HyperlinkButton x:Name="lnkHome" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Home" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Home.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock Text="Home" />
                        </StackPanel>
                    </HyperlinkButton>
                    <Rectangle x:Name="Divider1" Style="{StaticResource DividerStyle}" />
                    <HyperlinkButton x:Name="lnkDashboard" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Dashboard" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Gauge.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock Text="Dashboard" />
                        </StackPanel>
                    </HyperlinkButton>
                    <HyperlinkButton x:Name="lnkCategories" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Categories" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/SiteMap.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock>
                                <Run Text="Categories (" />
                                <Run Text="{Binding CategoriesCount, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                        </StackPanel>
                    </HyperlinkButton>
                    <HyperlinkButton x:Name="lnkCustomers" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Customers" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/People.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock>
                                <Run Text="Customers (" />
                                <Run Text="{Binding CustomersCount, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                        </StackPanel>
                    </HyperlinkButton>
                    <HyperlinkButton x:Name="lnkOrders" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Orders" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/List.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock>
                                <Run Text="Orders (" />
                                <Run Text="{Binding OrdersCount, Mode=OneWay}" />
                                <Run Text=")" />
                            </TextBlock>
                        </StackPanel>
                    </HyperlinkButton>
                    <HyperlinkButton x:Name="lnkProducts" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Products" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Tag.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock Text="" />
                            <Run Text="Products (" />
                            <Run Text="{Binding ProductsCount, Mode=OneWay}" />
                            <Run Text=")" />
                        </StackPanel>
                    </HyperlinkButton>
                    <Rectangle x:Name="Divider2" Style="{StaticResource DividerStyle}" />
                    <HyperlinkButton x:Name="lnkSettings" Style="{StaticResource LinkStyle}"
                                     NavigateUri="/Settings" TargetName="ContentFrame">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Setting.png" Width="16" Height="16" Margin="5,0,5,0" Stretch="Fill" />
                            <TextBlock Text="Settings" />
                        </StackPanel>
                    </HyperlinkButton>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource LoginContainerStyle}">
                <login:LoginStatus />
            </Border>
        </Grid>
    </Grid>
</views:BaseUserControl>