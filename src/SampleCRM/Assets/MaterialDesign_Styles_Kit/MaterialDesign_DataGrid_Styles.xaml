                        <GradientStop Color="#F9FFFFFF"
                                      Offset="0.375" />
                        <GradientStop Color="#E5FFFFFF"
                                      Offset="0.603" />
                        <GradientStop Color="#C6FFFFFF"
                                      Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border x:Name="Highlight"
                    Opacity="0"
                    CornerRadius="1"
                    IsHitTestVisible="false"
                    BorderBrush="#FF6DBDD1"
                    BorderThickness="1"
                    Margin="1" />
            
            <Border x:Name="DisabledElement"
                    Opacity="0"
                    CornerRadius="2"
                    Background="#FFFFFFFF" />
        </Grid>
