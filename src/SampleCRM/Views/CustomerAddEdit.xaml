<local:BaseUserControl
    x:Class="SampleCRM.Web.Views.CustomerAddEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SampleCRM.Web.Views"
    xmlns:controls="clr-namespace:SampleCRM.Controls"
    xmlns:viewModels="clr-namespace:SampleCRM.Web.Models">
    <local:BaseUserControl.Resources>
        <local:BinaryImageConverter x:Key="imgConverter" />
        <local:CountryCodeToCountryNameConverter x:Key="countryCodeConverter" />
        <local:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <local:DateTimeFormatConverter x:Key="DateTimeFormatConverter" />
    </local:BaseUserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="320" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12,6">
                <Grid Margin="0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Margin="1" Width="132" Height="132"
                            Source="{Binding CustomerViewModel.Picture, Mode=OneWay, Converter={StaticResource imgConverter}}" />
                    <Button x:Name="btnEditPicture" Click="btnEditPicture_Click"
                        BorderThickness="1" BorderBrush="White" Background="Transparent" HorizontalAlignment="Center"
                        Visibility="{Binding CustomerViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource boolToVisibilityConverter}}">
                        <Grid Width="132" Height="132">
                            <Rectangle Fill="White" Opacity="0.75" />
                            <TextBlock Text="Edit" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                    </Button>
                    <TextBlock Grid.Column="1" Margin="12,0,0,0" FontSize="18" VerticalAlignment="Center"
                        Text="{Binding CustomerViewModel.FullName, Mode=OneWay}" Style="{StaticResource CardText}"/>
                </Grid>

                <Rectangle Style="{StaticResource CardSeparator}"/>
                <TextBlock Style="{StaticResource CardSection}" Text="General"  />

                <TextBlock Style="{StaticResource CardHeader}" Text="Customer ID" />
                <TextBlock Style="{StaticResource CardText}" Text="{Binding CustomerViewModel.CustomerID, Mode=OneWay}" />

                <TextBlock Style="{StaticResource CardHeader}" Text="Created On" />
                <TextBlock Style="{StaticResource CardText}" Text="{Binding CustomerViewModel.CreatedOn, Mode=OneWay, Converter={StaticResource DateTimeFormatConverter}}" />

                <TextBlock Style="{StaticResource CardHeader}" Text="Last Update" />
                <TextBlock Style="{StaticResource CardText}" Text="{Binding CustomerViewModel.LastModifiedOn, Mode=OneWay, Converter={StaticResource DateTimeFormatConverter}}" />

                <Rectangle Style="{StaticResource CardSeparator}"/>
                <TextBlock Style="{StaticResource CardSection}" Text="Contact"/>

                <TextBlock Style="{StaticResource CardHeader}" Text="Email" />
                <TextBlock Style="{StaticResource CardText}" Text="{Binding CustomerViewModel.EmailAddress, Mode=OneWay}" />

                <TextBlock Style="{StaticResource CardHeader}" Text="Phone" />
                <TextBlock Style="{StaticResource CardText}" Text="{Binding CustomerViewModel.Phone, Mode=OneWay}" />

                <TextBlock Style="{StaticResource CardHeader}" Text="Address" />
                <TextBlock Style="{StaticResource CardText}" Margin="0" Text="{Binding CustomerViewModel.FullAddress, Mode=OneWay}" />

            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <ToggleButton x:Name="btnEdit" Margin="2" IsChecked="{Binding CustomerViewModel.IsEditMode, Mode=TwoWay}" 
                              Checked="btnEdit_Checked" Unchecked="btnEdit_Unchecked">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Edit.png" Margin="2,0,2,0" Width="16" Height="16" Stretch="Fill" />
                        <TextBlock Text="Edit" />
                    </StackPanel>
                </ToggleButton>
                <Button x:Name="btnDelete" Margin="2" Click="btnDelete_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Delete.png" Margin="2,0,2,0" Width="16" Height="16" Stretch="Fill" />
                        <TextBlock Text="Delete" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <ScrollViewer x:Name="customerDetails" Grid.Row="1" VerticalScrollBarVisibility="Auto" BorderThickness="0,0,1,0" BorderBrush="LightGray">
                <DataForm x:Name="formCustomer"                   
                      CurrentItem="{Binding CustomerViewModel, Mode=TwoWay}"
                      EditEnded="formCustomer_EditEnded"
                      AutoGenerateFields="False"
                      AutoEdit="False"
                      AutoCommit="False"
                      CommandButtonsVisibility="Commit, Cancel">
                    <DataForm.CommitButtonContent>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Save.png" Margin="2,0,2,0" Width="16" Height="16" Stretch="Fill" />
                            <TextBlock Text="Save" />
                        </StackPanel>
                    </DataForm.CommitButtonContent>
                    <DataForm.CancelButtonContent>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Cancel.png" Margin="2,0,2,0" Width="16" Height="16" Stretch="Fill" />
                            <TextBlock Text="Cancel" />
                        </StackPanel>
                    </DataForm.CancelButtonContent>
                    <DataForm.EditTemplate>
                        <DataTemplate>
                            <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <DataField Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Label="First Name" LabelPosition="Top">
                                    <TextBox Text="{Binding FirstName, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Label="Last Name" LabelPosition="Top">
                                    <TextBox Text="{Binding LastName, Mode=TwoWay}" />
                                </DataField>

                                <DataField Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" Label="Middle Name" LabelPosition="Top">
                                    <TextBox Text="{Binding MiddleName, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Label="Suffix" LabelPosition="Top">
                                    <TextBox Text="{Binding Suffix, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Label="EMail Address" LabelPosition="Top">
                                    <TextBox Text="{Binding EmailAddress, Mode=TwoWay}" />
                                </DataField>

                                <DataField Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Label="Phone" LabelPosition="Top">
                                    <TextBox Text="{Binding Phone, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Label="Address" LabelPosition="Top">
                                    <TextBox Text="{Binding AddressLine1, Mode=TwoWay}" />
                                </DataField>

                                <DataField Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Label="Postal Code" LabelPosition="Top">
                                    <TextBox Text="{Binding PostalCode, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Label="City" LabelPosition="Top">
                                    <TextBox Text="{Binding City, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Label="Region" LabelPosition="Top">
                                    <TextBox Text="{Binding Region, Mode=TwoWay}" />
                                </DataField>
                                <DataField Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="1" Label="Country" LabelPosition="Top">
                                    <ComboBox ItemsSource="{Binding CountryCodes}"                                                          
                                      SelectedValuePath="CountryCodeID"
                                      SelectedValue="{Binding CountryCode, Mode=TwoWay}"
                                      DisplayMemberPath="Name" />
                                </DataField>
                            </Grid>
                        </DataTemplate>
                    </DataForm.EditTemplate>
                </DataForm>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:BaseUserControl>
