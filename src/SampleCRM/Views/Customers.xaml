<local:BasePage x:Class="SampleCRM.Web.Views.Customers"
                 xmlns:local="clr-namespace:SampleCRM.Web.Views"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=OpenSilver.Controls.Navigation"
                 mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
                 Style="{StaticResource PageStyle}">
    <local:BasePage.Resources>
        <local:BinaryImageConverter x:Key="imgConverter" />
        <local:CountryCodeToCountryNameConverter x:Key="countryCodeConverter" />
        <local:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
        <local:DateTimeFormatConverter x:Key="DateTimeFormatConverter" />
    </local:BasePage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Button x:Name="btnNewCustomer" Grid.Column="0" Grid.Row="0" Margin="5">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Plus.png" Margin="5,0,5,0" Width="16" Height="16" Stretch="Fill" />
                <TextBlock Text="Add Customer" />
            </StackPanel>
        </Button>

        <StackPanel Grid.Column="2" Grid.Row="0" Margin="5" Orientation="Horizontal">
            <TextBox x:Name="txtSearch" PlaceholderText="Search" Width="250" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button x:Name="btnSearchCancel" Click="btnSearchCancel_Click">
                <Image Source="/Assets/Cancel.png" Width="16" Height="16" Stretch="Fill" />
            </Button>
        </StackPanel>

        <DataGrid x:Name="grdCustomers" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Margin="5"
                  ItemsSource="{Binding FilteredCustomersCollection}" 
                  SelectedItem="{Binding SelectedCustomer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  SelectionChanged="grdCustomers_SelectionChanged"
                  HorizontalContentAlignment="Stretch"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="True" 
                  CanUserSortColumns="True" 
                  CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding CustomerID}" IsReadOnly="True" />
                <DataGridTemplateColumn Header="Image" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Path=Picture, Converter={StaticResource imgConverter}}" 
                                Width="32" Height="32" Margin="5" Stretch="Fill" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                <DataGridTextColumn Header="Address" Binding="{Binding AddressLine1}" />
                <DataGridTextColumn Header="Country" Binding="{Binding CountryName}" />
            </DataGrid.Columns>

        </DataGrid>

        <TabControl Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" 
                            Visibility="{Binding AnySelectedCustomer, Converter={StaticResource boolToVisibilityConverter}}">
            <TabItem x:Name="tbCustomer" Header="Customer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0,0,1,0" BorderBrush="LightGray">
                        <ScrollViewer x:Name="customerCard" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="6">
                            <StackPanel>
                                <Grid Margin="0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Width="128" Height="128" Margin="1" Grid.Column="0"
                                        Source="{Binding SelectedCustomer.Picture, Mode=OneWay, Converter={StaticResource imgConverter}}" />
                                    <TextBlock Grid.Column="1" Margin="12,0,0,0" FontSize="18" VerticalAlignment="Center"
                                        Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.FullName, Mode=OneWay}" />
                                </Grid>

                                <TextBlock Style="{StaticResource CardHeader}" Text="Email" />
                                <TextBlock Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.EmailAddress, Mode=OneWay}" />

                                <TextBlock Style="{StaticResource CardHeader}" Text="Customer ID" />
                                <TextBlock Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.CustomerID, Mode=OneWay}" />

                                <TextBlock Style="{StaticResource CardHeader}" Text="Phone" />
                                <TextBlock Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.Phone, Mode=OneWay}" />

                                <TextBlock Style="{StaticResource CardHeader}" Text="Created On" />
                                <TextBlock Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.CreatedOn, Mode=OneWay, Converter={StaticResource DateTimeFormatConverter}}" />

                                <TextBlock Style="{StaticResource CardHeader}" Text="Last Update" />
                                <TextBlock Style="{StaticResource CardText}" Text="{Binding SelectedCustomer.LastModifiedOn, Mode=OneWay, Converter={StaticResource DateTimeFormatConverter}}" />

                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbOrders" Header="Orders"></TabItem>
        </TabControl>

    </Grid>
</local:BasePage>